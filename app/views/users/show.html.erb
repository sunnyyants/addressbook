<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center">User Information</h1>
    <div class="list-group">
      <a href="#" class="list-group-item">
        <strong>Name: </strong><%= @user.name%>
      </a>
      <a href="#" class="list-group-item">
        <Strong>Email: </Strong><%=@user.email%>
      </a>
      <a href="#" class="list-group-item">
        <strong>Phone: </strong><%=@user.phone%>
      </a>
    </div>
  </div>
  <div class="col-md-8 col-md-offset-2 text-center">
    <button class="btn btn-default" style="width: 30%; height:30%; margin-top:10%" id="searchNow"><p class="lead text-center">Click me start!</p></button>
    <div><%=@users_friends%></div>
  </div>
  <div class="backdrop"></div>
  <div id="searchBox"><div class="close col-md-12">x</div>
    <div class="col-md-6">
      <div>
        <legend>Search Contacts</legend>
        <%=form_tag users_path, class:"form group", id: "searchForm",:method => 'get' do%>
            <%= text_field_tag :search, params[:search], class:"form-control", placeholder:"Search contacts..." , id: "contacts"%>
        <% end %>
      </div>
      <div id="results">
        <%= render "searchResult"%>
      </div>
    </div>
    <div class="col-md-6">
      <legend>My friends</legend>
      <div id="friends">
        <%= render "friends"%>
      </div>
    </div>
  </div>

</div>