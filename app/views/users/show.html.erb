<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <legend>User Information</legend>
    <div class="list-group">
      <a href="#" class="list-group-item active">
        <strong>Name: </strong><%= @user.name %>
      </a>
      <a href="#" class="list-group-item">
        <Strong>Email: </Strong><%= @user.email%>
      </a>
      <a href="#" class="list-group-item">
        <strong>Phone: </strong><%= @user.phone%>
      </a>
    </div>
    <div class="col-md-6">
      <%= link_to 'Update Info',edit_user_path(@user), class:"btn btn-block btn-info"%>
    </div>
    <div class="col-md-6">
      <%= link_to 'Back', home_index_path, class:"btn btn-block btn-warning"%>

    </div>
  </div>

  <div class="col-md-10 col-md-offset-1">
    <legend>My friends</legend>

    <table class="table group">
      <thead>
      <tr>
        <td>Name</td>
        <td>Email</td>
        <td>Phone</td>
        <td>Delete Friend</td>
      </tr>
      </thead>
      <tbody>
      <% @user.friendships.each do |friendship| %>
          <tr>
            <td><%=friendship.friend.name%></td>
            <td><%=friendship.friend.email%></td>
            <td><%=friendship.friend.phone%></td>
            <td><%=link_to "Delete", friendship, method: :delete%></td>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

