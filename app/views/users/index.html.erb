<div class="container">
  <div class="col-md-10 col-md-offset-1">
    <h1>Listing users</h1>

    <table class="table table-striped table-hover">
      <thead>
      <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Add Friend</th>


      </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
          <tr>
            <% if user.id != current_user.id %>
                <td class="info"><%= user.name %></td>
                <td class="success"><%=user.email%></td>
                <td class="warning"><%=user.phone%></td>
                <td class="active"><%= link_to 'Add Friend', friendships_path(:friend_id => user), :method => :post %></td>
            <%end%>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
  </div>
</div>