<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <%=form_tag sessions_path, class: "form-signin form group", role:"form" do %>

        <h2 class="form-signin-heading">Please sign in</h2>
        <div class="form-group field">
          <%= text_field_tag  :name , params[:name], class:"form-control", placeholder:"Name"%>
        </div>
        <div class="form-group field">
          <%= password_field_tag  :password , nil ,class:"form-control", placeholder:"Password"%>
        </div>

        <div class="form-group field">
          <%= check_box_tag :remember_me, 1, params[:remember_me] %>
          <%= label_tag :remember_me %>
        </div>

        <%= submit_tag "Log in", class:"btn btn-lg btn-primary btn-block"%>
    <% end %>
  </div>

</div>
