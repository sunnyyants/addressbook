!!!
%html
  %head
    %title AddressBook
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' 'jquery'=> true
    = csrf_meta_tags
  %body
    .navbar.navbar-default.navbar-static-top{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => ".navbar-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => "#"} Address book
        .navbar-collapse.collapse
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              %li
                %a
                  Welcome:
                  %span#nav_name= current_user.name
              %li= link_to "Sign out", signout_path
    .container
      - flash.each do |name,msg|
        .alert.alert-warning.alert-dismissible
          %button.close{"data-dismiss" => "alert", :type => "button"}
            %span{"aria-hidden" => "true"}
              \Ã—
            %span.sr-only Close
          = content_tag :div, msg, :id => "flash_#{name}"
    = yield